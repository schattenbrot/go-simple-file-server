{
    "swagger": "2.0",
    "info": {
        "description": "This is a simple file management API.",
        "title": "File API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/app": {
            "get": {
                "description": "Retrieves the running server's status",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "app"
                ],
                "summary": "Get server status",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/app.StatusResponse"
                        }
                    }
                }
            }
        },
        "/app/ping": {
            "get": {
                "description": "Retrieves a success message",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "app"
                ],
                "summary": "Ping the server",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/app.StatusResponse"
                        }
                    }
                }
            }
        },
        "/app/status": {
            "get": {
                "description": "Retrieves the running server's status",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "app"
                ],
                "summary": "Get server status",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/app.StatusResponse"
                        }
                    }
                }
            }
        },
        "/files/": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Retrieves a list of available files",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "files"
                ],
                "summary": "Get files",
                "responses": {
                    "200": {
                        "description": "List of files",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/files.FileInfo"
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/explerror.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/explerror.ErrorResponse"
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Uploads a file",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "files"
                ],
                "summary": "Upload a file",
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/files.uploadResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/explerror.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/files/{filename}": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Retrieves a file by filename",
                "produces": [
                    "application/octet-stream"
                ],
                "tags": [
                    "files"
                ],
                "summary": "Get a file",
                "parameters": [
                    {
                        "type": "string",
                        "description": "File name",
                        "name": "filename",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "File content",
                        "schema": {
                            "$ref": "#/definitions/files.FileResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/explerror.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/explerror.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "app.StatusResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "description": "Message represents the server status.",
                    "type": "string"
                }
            }
        },
        "explerror.ErrorResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "description": "Message represents the error message.\nexample: Bad request",
                    "type": "string"
                },
                "statusCode": {
                    "description": "StatusCode represents the HTTP status code of the error.\nexample: 400",
                    "type": "integer"
                }
            }
        },
        "files.FileInfo": {
            "type": "object",
            "properties": {
                "filename": {
                    "description": "Filename represents the file's name.",
                    "type": "string"
                },
                "filetype": {
                    "description": "Filetype represents the file's type.",
                    "type": "string"
                }
            }
        },
        "files.FileResponse": {
            "type": "object",
            "properties": {
                "contentAsBlob": {
                    "description": "Content represents the content of the file.",
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                }
            }
        },
        "files.uploadResponse": {
            "type": "object",
            "properties": {
                "filepath": {
                    "description": "Filepath represents the URL where the uploaded file can be accessed.\nExample: http://example.com/api/v1/files/filename.png",
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}